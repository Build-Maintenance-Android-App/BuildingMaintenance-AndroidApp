<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical"
    tools:context=".Activities.LoginActivity">


    <TextView
        android:id="@+id/authHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2F4F534F"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#FFC107"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="348dp"
        android:ems="10"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="#F3EBEB"
        android:textColorHighlight="#267FC6"
        android:textColorHint="#25DD2C" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:ems="10"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#F3EBEB"
        android:textColorHighlight="#FF03DAC5"
        android:textColorHint="#25DD2C" />


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#1D1E20"
        android:gravity="center"
        android:text="@string/Login" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/authpageChangeTv"
        android:textColor="#4CAF50"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonResident"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:buttonTint="#8BC34A"
            android:text="@string/choice1"
            android:textColor="#F3F1E5"
            android:textColorHighlight="#4CAF50"
            android:textColorLink="#8BC34A" />

        <RadioButton
            android:id="@+id/radioButtonBuild"
            android:layout_width="204dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:buttonTint="#8BC34A"
            android:text="@string/choice2"
            android:textColor="#EDECE2"
            android:textColorHighlight="#4CAF50"
            android:textColorLink="#8BC34A" />

    </RadioGroup>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/animation_view"
        app:lottie_rawRes="@raw/successtick"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>



</LinearLayout>